
{% extends 'base.html.twig' %}

{% block body %}

{% if error %}
  <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container loginF">
  <div class="row">
    <div class="col-md-offset-8 col-md-6">
      <div class="form-login">
        <h4>Entrez vos identifiants</h4>
        <form action="{{ path('login') }}" method="post">
          <input type="text" id="username" name="_username" value="{{last_username}}" class="form-control input-sm chat-input" placeholder="email"/>
        </br>
        <input type="password" id="password" name="_password" class="form-control input-sm chat-input" placeholder="mot de passe"/>
      </br>

      <div class="wrapper">
        <span class="group-btn">
          <button type"submit"="type" submit""="submit""" class="btn btn-primary btn-md">Connexion
            <i class="fa fa-sign-in"></i>
          </button>
        </span>
      </div>
    </div>
  </form>
</div>
</div>

</div>

{% endblock %}
